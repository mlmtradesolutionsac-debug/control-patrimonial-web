# CONFIGURACIÓN PARA PRODUCCIÓN
# ⚠️ IMPORTANTE: Copiar a .env.production y modificar los valores
# Nunca comitear .env.production con valores reales

# Entorno
FLASK_ENV=production
DEBUG=False

# SEGURIDAD: Generar con: python -c "import secrets; print(secrets.token_hex(32))"
# Debe ser diferente para cada instancia en producción
SECRET_KEY=GENERAR_CON_SECRETS_MODULE_Y_CAMBIAR_ESTE_VALOR

# Base de datos PostgreSQL
# Formato: postgresql://usuario:password@host:puerto/base_de_datos
DATABASE_URL=postgresql://control_patrimonial:password_seguro@localhost:5432/control_patrimonial

# Cookies seguras (HTTPS en producción)
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True

# Nivel de logging
LOG_LEVEL=WARNING

# ⚠️ SEGURIDAD CRÍTICA:
# 1. Cambiar SECRET_KEY con un valor único
# 2. Usar contraseña fuerte en DATABASE_URL
# 3. Verificar que SESSION_COOKIE_SECURE=True (requiere HTTPS)
# 4. Usar un reverse proxy (nginx) con SSL/TLS
# 5. Validar DATABASE_URL existe y es accesible
# 6. Backups automatizados de la base de datos
